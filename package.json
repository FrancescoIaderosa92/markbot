{
  "name": "Markbot",
  "version": "7.2.0",
  "license": "GPL",
  "description": "An automated marking application for code projects in the Algonquin College Graphic Design program.",
  "author": "Thomas J Bradley <hey@thomasjbradley.ca>",
  "homepage": "https://github.com/thomasjbradley/markbot",
  "bugs": "https://github.com/thomasjbradley/markbot/issues",
  "private": true,
  "main": "markbot.js",
  "dependencies": {
    "axe-core": "^2.4.1",
    "calipers": "^2.0.0",
    "calipers-jpeg": "^2.0.0",
    "calipers-png": "^2.0.0",
    "cheerio": "^1.0.0-rc.2",
    "css": "^2.2.1",
    "css-select": "^1.3.0-rc0",
    "electron-is": "^2.3.0",
    "entities": "^1.1.1",
    "es6-promisify": "^5.0.0",
    "eslint": "^3.19.0",
    "exif": "^0.6.0",
    "finalhandler": "^1.0.4",
    "front-matter": "^2.2.0",
    "get-port": "^3.2.0",
    "git-commits": "^1.2.0",
    "git-state": "^4.0.0",
    "glob": "^7.1.1",
    "htmlcs": "^0.4.1",
    "jimp": "^0.2.27",
    "js-beautify": "^1.6.4",
    "js-yaml": "^3.10.0",
    "markdownlint": "^0.6.1",
    "merge-objects": "^1.0.5",
    "mime-types": "^2.1.17",
    "mkdirp": "^0.5.1",
    "node-dir": "^0.1.16",
    "parse5": "^3.0.2",
    "png-itxt": "^1.3.0",
    "portfinder": "^1.0.10",
    "string": "^3.3.3",
    "stylelint": "^7.6.0",
    "webcoach": "^0.37.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^1.7.6",
    "electron-builder": "^19.27.7"
  },
  "scripts": {
    "debug": "NODE_ENV=development electron markbot.js",
    "start": "electron markbot.js",
    "pack-mac": "build -m --dir",
    "pack-win": "build -w --dir",
    "pack": "build -mw --dir",
    "pack-bg": "tiffutil -cathidpicheck ./build/background.png ./build/background@2x.png -out ./build/background.tiff",
    "build-mac": "npm run pack-bg && build -m",
    "build-win": "build -w",
    "build": "npm run build-mac && npm run build-win",
    "hash-passcode": "node ./scripts/hash-passcode.js",
    "gen-https-cert": "./scripts/gen-https-cert.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasjbradley/markbot.git"
  },
  "build": {
    "appId": "ca.thomasjbradley.markbot",
    "copyright": "Â© Thomas J Bradley",
    "productName": "Markbot",
    "compression": "maximum",
    "asarUnpack": [
      "vendor"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeRole": "Editor",
            "LSHandlerRank": "Alternate",
            "LSItemContentTypes": [
              "public.directory",
              "com.apple.bundle",
              "com.apple.resolvable"
            ]
          }
        ]
      }
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true
    },
    "dmg": {
      "title": "Install Markbot",
      "iconSize": 100,
      "window": {
        "x": 200,
        "y": 200
      },
      "contents": [
        {
          "x": 494,
          "y": 270,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 210,
          "y": 270,
          "type": "file"
        }
      ]
    }
  }
}
