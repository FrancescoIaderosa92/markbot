{
  "name": "Markbot",
  "version": "4.2.2",
  "license": "GPL",
  "description": "An automated marking application for code projects in the Algonquin College Graphic Design program.",
  "author": "Thomas J Bradley <hey@thomasjbradley.ca>",
  "homepage": "https://github.com/thomasjbradley/markbot",
  "bugs": "https://github.com/thomasjbradley/markbot/issues",
  "private": true,
  "main": "markbot.js",
  "dependencies": {
    "cheerio": "^0.22.0",
    "css": "^2.2.1",
    "entities": "^1.1.1",
    "eslint": "^3.8.0",
    "git-commits": "^1.2.0",
    "git-get-status": "^1.0.5",
    "htmlcs": "^0.2.9",
    "jimp": "^0.2.27",
    "js-beautify": "^1.6.4",
    "js-yaml": "^3.6.1",
    "merge-objects": "^1.0.5",
    "mkdirp": "^0.5.1",
    "node-dir": "^0.1.16",
    "stylelint": "^7.4.2",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "electron": "^1.4.3",
    "electron-builder": "^7.14.1"
  },
  "scripts": {
    "start": "electron markbot.js",
    "pack-mac": "build -m --dir",
    "pack-win": "build -w --dir",
    "pack": "build -mw --dir",
    "build-mac": "build -m",
    "build-win": "build -w",
    "build": "build -mw",
    "hash-passcode": "node ./scripts/hash-passcode.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasjbradley/markbot.git"
  },
  "build": {
    "appId": "ca.thomasjbradley.markbot",
    "category": "public.app-category.developer-tools",
    "copyright": "Â© Thomas J Bradley",
    "productName": "Markbot",
    "compression": "maximum",
    "extend-info": "markbot-extra.plist",
    "asar": {
      "unpackDir": "vendor"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "iconUrl": "https://raw.githubusercontent.com/thomasjbradley/markbot/master/build/icon.ico",
      "target": "nsis"
    },
    "dmg": {
      "title": "Install Markbot",
      "background-color": "#f5f2f0",
      "icon-size": 100,
      "contents": [
        {
          "x": 494,
          "y": 270,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 210,
          "y": 270,
          "type": "file"
        }
      ]
    }
  }
}
