{
  "name": "Markbot",
  "version": "2.4.1",
  "license": "GPL",
  "description": "An automated marking application for code projects in the Algonquin College Graphic Design program.",
  "author": "Thomas J Bradley <hey@thomasjbradley.ca>",
  "homepage": "https://github.com/thomasjbradley/markbot",
  "bugs": "https://github.com/thomasjbradley/markbot/issues",
  "private": true,
  "main": "markbot.js",
  "devDependencies": {
    "cheerio": "^0.19.0",
    "css": "^2.2.1",
    "electron-builder": "^2.6.0",
    "electron-packager": "^5.2.1",
    "electron-prebuilt": "^0.36.5",
    "entities": "^1.1.1",
    "eslint": "^2.1.0",
    "git-commits": "^1.1.1",
    "htmlcs": "^0.1.10",
    "js-beautify": "^1.5.10",
    "js-yaml": "^3.5.2",
    "mocha": "^2.3.4",
    "node-dir": "^0.1.11",
    "stylelint": "^3.2.1",
    "xml2js": "^0.4.16"
  },
  "scripts": {
    "start": "electron markbot.js",
    "clean": "rm -Rf ./dist",
    "clean:osx": "rm -Rf ./dist/osx",
    "clean:win": "rm -Rf ./dist/win",
    "pack": "npm run clean && npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run clean:osx && electron-packager ./ --overwrite --app-version=2.4.1 \"Markbot\" --out=dist/osx --platform=darwin --arch=x64 --version=0.36.5 --ignore='(dist/osx|dist/win)' --icon=icon.icns --app-bundle-id=ca.thomasjbradley.markbot --app-category-type=public.app-category.developer-tools",
    "pack:win": "npm run clean:win && electron-packager ./ --overwrite --app-version=2.4.1 \"Markbot\" --out=dist/win --platform=win32 --arch=ia32 --version=0.36.5 --ignore='(dist/osx|dist/win)' --icon=icon.ico --version-string={ProductName:'Markbot'}",
    "build": "npm run build:osx && npm run build:win",
    "build:osx": "npm run pack:osx && electron-builder \"dist/osx/Markbot-darwin-x64/Markbot.app\" --platform=osx --out=\"dist/osx\" --config=builder.json",
    "build:win": "npm run pack:win && electron-builder \"dist/win/Markbot-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasjbradley/markbot.git"
  },
}
